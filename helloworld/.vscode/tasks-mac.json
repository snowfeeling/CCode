{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Windows C/C++: gcc.exe build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${cwd}/app/*.c",
				"-o",
				"${cwd}/bin/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/gcc"
		}
	]
}