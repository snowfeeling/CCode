{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Mac /C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${cwd}/app/*.c",
				"${cwd}/src/*.c",	
				//"${file}",
				"-o",
				//"${fileDirname}/${fileBasenameNoExtension}"
				"${cwd}/bin/${fileBasenameNoExtension}",
			],
			//"options": {
			//	"cwd": "${fileDirname}"
			//},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/clang"
		}
	]
}